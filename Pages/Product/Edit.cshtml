@page
@model Products.EditModel
@inject SignInManager<Employee> SignInManager

@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-md-4">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.ProductId" />
                <div class="form-group">
                    <label asp-for="Product.ProductName" class="control-label"></label>
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Type" class="control-label"></label>
                    <select asp-for="Product.Type" class="form-control"
                    asp-items="Html.GetEnumSelectList<ProductType>()"></select>
                    <span asp-validation-for="Product.Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Size" class="control-label"></label>
                    <select asp-for="Product.Size" class="form-control"
                    asp-items="Html.GetEnumSelectList<PizzaSize>()"></select>
                    <span asp-validation-for="Product.Size" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Quantity" class="control-label"></label>
                    <input asp-for="Product.Quantity" class="form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Product.IsGlutenFree" /> @Html.DisplayNameFor(model =>
                    model.Product.IsGlutenFree)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.BatchNumber" class="control-label"></label>
                    <input asp-for="Product.BatchNumber" class="form-control" />
                    <span asp-validation-for="Product.BatchNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.BestBefore" class="control-label"></label>
                    <input asp-for="Product.BestBefore" class="form-control" />
                    <span asp-validation-for="Product.BestBefore" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>


        </div>
    }
    else
    {
        <div class="col-md-6 col-md-offset-2">
            <p>Only authorized user has the privilege to edit product details.</p>
            <p>Please <a id="login" asp-area="Identity" asp-page="/Account/Login">login</a> or
                contact company system admin</p>
        </div>
    }
</div>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
